@model List<Project_WebDev.Models.Item>

<link rel="stylesheet" type="text/css" href="~/css/styles.css" />
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav"> <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Rifles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Pistols</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Shotguns</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <main class="container mt-5">
        <h2>Products</h2>
        <div class="row">
        @foreach (var item in Model)
        {
                    <div class="col-12 col-md-6 col-lg-4 mb-3">
                        <div class="card">
                            <img src="@Url.Content($"~/{item.Image}")" class="card-img-top" alt="@item.Name">
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p>@item.Description</p>
                                <a href="#" class="btn btn-primary">Buy</a>
                            </div>
                        </div>
                    </div>
        }
        </div>
    </main>