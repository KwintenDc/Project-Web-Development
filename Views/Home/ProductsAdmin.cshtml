<div class="container mt-5">
    <h1>Order Management</h1>
    <table class="table mt-3">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Customer Name</th>
                <th scope="col">Total Amount</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Example order rows -->
            <tr>
                <td><input type="checkbox"></td> <!-- Checkbox for selecting the order -->
                <td>John Doe</td>
                <td>$50.00</td>
                <td>
                    <button class="btn btn-primary mr-2">Edit</button>
                    <button class="btn btn-danger">Delete</button>
                </td>
            </tr>
            <!-- End of example order rows -->
        </tbody>
    </table>
    <!-- Disabled div with order details -->
    <div class="mt-3 border p-3 bg-light" style="display: none;">
        <h4>Order Details</h4>
        <p>Item: Product 1</p>
        <p>Amount: 2</p>
        <p>Total Price: $20.00</p>
        <!-- Add more order details here -->
    </div>
    <!-- Bulk delete button -->
    <div class="text-right mt-3">
        <button class="btn btn-danger">Delete Selected Orders</button>
    </div>
</div>
