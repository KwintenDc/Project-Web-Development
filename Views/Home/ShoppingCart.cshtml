@model IEnumerable<Project_WebDev.Models.OrderDetails>

<div class="container mt-5">
    <h2>Shopping Cart</h2>
    <div class="row">
        <div class="col-md-8">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Product</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Total</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orderDetails in Model)
                    {
                    <tr>
                        <td>@orderDetails.Item.Name</td>
                        <td>€@orderDetails.Item.Price</td>
                        <td>
                            <input type="number" value="1" min="1" id="quantity{@orderDetails.Id}">
                        </td>
                        <td id="totalPrice">€@(orderDetails.Quantity * orderDetails.Item.Price)</td>
                        <td>
                            <button class="btn btn-sm btn-danger" id="removeBtn{@orderDetails.Id}">Remove</button>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            <div class="text-right">
                <button class="btn btn-primary">Update Cart</button>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Cart Summary</h5>
                    <p class="card-text">Subtotal: 
                    @if (Model != null && Model.Any())
                    {
                    <span id="subtotal">€@Model.Sum(od => od.Quantity * od.Item.Price)</span>
                    }
                    else
                    {
                    <span>€0.00</span>
                    }
                    </p>
                    <p class="card-text" id="shipping">Shipping: €5.00</p> <!-- Replace with actual shipping cost -->
                    <hr>
                    <h4 class="card-text">Total: 
                    @if (Model != null && Model.Any())
                    {
                    <span id="total">€@(Model.Sum(od => od.Quantity * od.Item.Price) + 5.00)</span>
                    }
                    else
                    {
                    <span>€5.00</span>
                    }
                    </h4>
                    <a href="#" class="btn btn-success btn-block">Checkout</a>
                </div>
            </div>  
        </div>
    </div>
</div>
<script src="~/js/cart.js"></script>
