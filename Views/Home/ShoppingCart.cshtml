<div class="container mt-5">
        <h2>Shopping Cart</h2>
        <div class="row">
            <div class="col-md-8">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Total</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Iterate over items in the shopping cart -->
                        <tr>
                            <td>Product Name</td>
                            <td>$10.00</td>
                            <td>
                                <input type="number" value="1" min="1">
                            </td>
                            <td>$10.00</td>
                            <td>
                                <button class="btn btn-sm btn-danger">Remove</button>
                            </td>
                        </tr>
                        <!-- Add more rows for each product in the shopping cart -->
                    </tbody>
                </table>
                <div class="text-right">
                    <button class="btn btn-primary">Update Cart</button>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Cart Summary</h5>
                        <p class="card-text">Subtotal: $10.00</p>
                        <p class="card-text">Shipping: $5.00</p>
                        <hr>
                        <h4 class="card-text">Total: $15.00</h4>
                        <a href="#" class="btn btn-success btn-block">Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>