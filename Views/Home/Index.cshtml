@model IEnumerable<Project_WebDev.Models.Item>

<link rel="stylesheet" type="text/css" href="css/styles.css" />


  <div class="container-fluid hero-banner d-flex align-items-center justify-content-center text-center mt-5">
    <div class="row">
      <div class="col-12">
        <h1>Welcome to the Airsoft Webshop!</h1>
        <p>Your one-stop shop for all your airsoft gear and needs.</p>
        <a asp-action="Shop" class="btn btn-primary mt-3">Shop Now!</a>
      </div>
    </div>
  </div>

  <div class="container mt-5">
    <h2>Featured Products</h2>
    <div class="row">
        @foreach (var item in Model.Where(i => i.State == "Featured"))
        {
            <div class="col-12 col-md-6 col-lg-4 mb-3">
            <div class="card">
              <img src=@item.Image class="card-img-top" alt="Product 1">
              <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <a asp-action="Shop" class="btn btn-primary">Go to shop</a>
              </div>
            </div>
          </div>
        }
      
     </div>
  </div>

  <div class="container-fluid call-to-action mt-5 py-5 d-flex align-items-center justify-content-center text-center">
    <div class="row">
      <div class="col-12">
        <h2>What are the rules?</h2>
        <p>Make sure you know the rules about buying and moving airsoftgear in your country! Click the button below for more information.</p>
        <a class="btn btn-primary mt-3" asp-action="About">More Info</a>
      </div>
    </div>
  </div>


